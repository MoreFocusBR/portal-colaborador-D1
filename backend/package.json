{
  "type": "module",
  "scripts": {
    "start": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/index.ts",
    "dev": "nodemon --watch src --exec node --inspect --no-warnings=ExperimentalWarning --loader ts-node/esm src/index.ts",
    "build": "tsc"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0",
    "pg": "^8.15.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.x",
    "@types/express": "^4.x",
    "@types/jsonwebtoken": "^9.x",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.2",
    "@types/pg": "^8.x",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
